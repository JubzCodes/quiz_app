<body>
  <!-- nav bar here -->
  <nav> <%- include('partials/_navbar') %></nav>

  <h1> MAKE A NEW QUIZ</h1>
  <div id="create-quiz-form">
    <form action="/quiz/new" method="POST">

      <div>
      <div>
        <label for="question">Question:</label>
        <input type="text" name="question" placeholder="enter a question here" required/>
      </div>

      <div>
        <label for="answer">Answer:</label>
        <!-- <input type="text" name="answer" placeholder="enter an answer here" required/> -->
        <textarea name="answer" placeholder="enter answer here" required></textarea>
      </div>

        <div id=category-choice>
          <label> Choose a category</label>

          <input type="radio" name="category-1" value="choice-1" />
          <label for="category-1">Math</label>

          <input type="radio" name="category-1" value="choice-2" />
          <label for="category-1">English</label>

          <input type="radio" name="category-1" value="choice-3" />
          <label for="category-1">Science</label>

          <input type="radio" name="category-1" value="choice-4" />
          <label for="category-1">Other</label>
        </div>

        <div>
          <button>Share Quiz</button>
          <button>Submit!</button>

        </div>





      </div>




    </form>
  </div>



</body>


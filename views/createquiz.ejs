<body>
  <!-- nav bar here -->
  <nav> <%- include('partials/_navbar') %></nav>

  <h1> MAKE A NEW QUIZ</h1>
  <div id="create-quiz-form">
    <form action="/quiz/new" method="POST">

      <div>
      <div>
        <label for="question">Question:</label>
        <input type="text" name="question" placeholder="enter a question here" required/>
      </div>

      <div>
        <label for="answer">Answer:</label>
        <!-- <input type="text" name="answer" placeholder="enter an answer here" required/> -->
        <textarea name="answer" placeholder="enter answer here" required></textarea>
      </div>

        <div id=quiz-settings>
          <label> Please select a privacy setting for your quiz</label>

          <input type="radio" name="privacy" value="choice-1" required/>
          <label for="privacy">Private</label>

          <input type="radio" name="privacy" value="choice-2" required />
          <label for="privacy">Public</label>
        </div>

        <div>
          <label for="category">Choose a category:</label>
          <select id=category required>
            <option value=“0” selected disabled></option>
            <option value=“math”>Math</option>
            <option value=“sci”>Science</option>
            <option value=“eng”>English</option>
            <option value=“art”>Art</option>
            <option value=“geo”>Geography</option>
            <option value=“lit”>Literature</option>
            <option value=“other”>Other</option>
            </select>
      </div>

        <div>
          <button>Share Quiz</button>
          <button id=submit-new-quiz href="/quiz">Submit!</button>
          <!-- this doesnt work because we need a post /quiz route -->



        </div>





      </div>




    </form>
  </div>



</body>

</html>
